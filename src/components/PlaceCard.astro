---
import FormattedDate from './FormattedDate.astro'
const { place } = Astro.props
const frontmatter = place.frontmatter
---

<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-lg bg-gray-900 px-8 pb-8 pt-64">
  <img src={frontmatter.thumb} alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
  <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
  <div class="absolute inset-0 -z-10 rounded-lg ring-1 ring-inset ring-gray-900/10"></div>
  <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
    <a href={place.url}>
      <span class="absolute inset-0"></span>
      {frontmatter.title}
    </a>
  </h3>
  <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
    <span class="mr-8">{frontmatter.subtitle}</span>
    <div class="-ml-4 flex items-center gap-x-4">
      <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
        <circle cx="1" cy="1" r="1" />
      </svg>
      <FormattedDate date={frontmatter.surveyDate} />
    </div>
  </div>
  <div class="mt-2">
    <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs text-gray-600 ring-1 ring-inset ring-gray-500/10 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs text-red-700 ring-1 ring-inset ring-red-600/10 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs text-yellow-800 ring-1 ring-inset ring-yellow-600/20 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs text-green-700 ring-1 ring-inset ring-green-600/20 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs text-blue-700 ring-1 ring-inset ring-blue-700/10 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs text-indigo-700 ring-1 ring-inset ring-indigo-700/10 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-purple-50 px-2 py-1 text-xs text-purple-700 ring-1 ring-inset ring-purple-700/10 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-pink-50 px-2 py-1 text-xs text-pink-700 ring-1 ring-inset ring-pink-700/10 font-Inconsolata">Badge</span>

    <span class="inline-flex items-center rounded-md bg-gray-400/10 px-2 py-1 text-xs text-gray-400 ring-1 ring-inset ring-gray-400/20 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-red-400/10 px-2 py-1 text-xs text-red-400 ring-1 ring-inset ring-red-400/20 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-yellow-400/10 px-2 py-1 text-xs text-yellow-500 ring-1 ring-inset ring-yellow-400/20 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-green-500/10 px-2 py-1 text-xs text-green-400 ring-1 ring-inset ring-green-500/20 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-blue-400/10 px-2 py-1 text-xs text-blue-400 ring-1 ring-inset ring-blue-400/30 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-indigo-400/10 px-2 py-1 text-xs text-indigo-400 ring-1 ring-inset ring-indigo-400/30 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-purple-400/10 px-2 py-1 text-xs text-purple-400 ring-1 ring-inset ring-purple-400/30 font-Inconsolata">Badge</span>
    <span class="inline-flex items-center rounded-md bg-pink-400/10 px-2 py-1 text-xs text-pink-400 ring-1 ring-inset ring-pink-400/20 font-Inconsolata">Badge</span>
  </div>
</article>
