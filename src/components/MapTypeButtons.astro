<map-type-buttons class="inline-flex rounded-md shadow-lg font-Inconsolata" data-default_map={Astro.props.defaultMap} data-scene_id={Astro.props.sceneId} data-web_map_id={Astro.props.webMapId}>
    <a id="btn3d" class="border border-amber-100 text-amber-100 hover:bg-sage-darker hover:text-white rounded-l-md px-2" href="#map=3d">üåç 3D</a>
    <a id="btn2d" class="border border-amber-100 text-amber-100 hover:bg-sage-darker hover:text-white rounded-r-md px-2" href="#map=2d">üó∫Ô∏è 2D</a>
</map-type-buttons>

<script>

import { getMapType } from '../js/place'

class MapTypeButtons extends HTMLElement {
    constructor() {
        super()

        const mt = getMapType(this.dataset.default_map, this.dataset.scene_id, this.dataset.tile_layer_id)

        if (mt === '3d') {
            toggle3d()
        }

        if (mt === '2d') {
           toggle2d()
        }

        window.addEventListener('hashchange', () => {
            const mt = getMapType(this.dataset.scene_id, this.dataset.tile_layer_id)

            if (mt === '3d') {
                toggle3d()
            }

            if (mt === '2d') {
            toggle2d()
            }
        })
    }
}

customElements.define('map-type-buttons', MapTypeButtons)

function toggle3d() {
    const el3d = document.getElementById('btn3d')
    const el2d = document.getElementById('btn2d')
    el3d?.classList.add('bg-sage-darkest', 'text-white')
    el2d?.classList.remove('bg-sage-darkest', 'text-white')
}

function toggle2d() {
    const el3d = document.getElementById('btn3d')
    const el2d = document.getElementById('btn2d')
    el2d?.classList.add('bg-sage-darkest', 'text-white')
    el3d?.classList.remove('bg-sage-darkest', 'text-white')
}

</script>